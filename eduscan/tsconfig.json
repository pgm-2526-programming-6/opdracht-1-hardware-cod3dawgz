{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@assets/*": ["./assets/*"],
      "@design/*": ["./src/components/design/*"],
      "@functional/*": ["./src/components/functional/*"],
      "@core/*": ["./src/core/*"],
      "@style/*": ["./src/style/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}